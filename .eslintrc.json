{  
    "extends": "eslint:recommended",
    "rules": {  
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "no-console": "off",
        "comma-dangle": ["error", "never"],
        "one-var": "off",
        "indent": ["error", 4],
        "space-infix-ops": ["error"],
        "linebreak-style": ["error", "unix"]
    },
    "parserOptions": {
        "ecmaVersion": 8
    },
    "env": {
        "node": true,
        "browser": true,
        "amd": true
    },
    "globals": {
        "console": true
    }
}